// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  url          String   @unique
  title        String
  image        String
  price        String
  fabric       String[]
  fit          String[]
  care         String[]
  construction String[]

  // Relations
  originalMatches    ProductMatch[] @relation("OriginalProduct")
  similarToMatches   ProductMatch[] @relation("SimilarProduct")
}

model ProductMatch {
  id                String   @id @default(cuid())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  // Match scores
  fabricScore      Float
  constructionScore Float
  fitScore         Float
  careScore        Float
  totalScore       Float

  // Relations
  originalProductId String
  similarProductId String
  originalProduct  Product  @relation("OriginalProduct", fields: [originalProductId], references: [id])
  similarProduct   Product  @relation("SimilarProduct", fields: [similarProductId], references: [id])

  @@unique([originalProductId, similarProductId])
} 